<h1 class="mt-3 text-lg font-bold"><%= t :new_list %></h1>
<%= form_with model: @new_list do |form| %>
  <div>
    <%= form.label :name, t(:name) %>
    <%= form.text_field :name, class: 'shadow
                                       appearance-none
                                       border
                                       rounded
                                       w-full
                                       py-2
                                       px-3
                                       leading-tight
                                       bg-inherit
                                       focus:outline-none
                                       focus:border-sky-500' %>
  </div>
  <%= form.button t(:submit), class: 'rounded-full
                                      border-2
                                      border-sky-600
                                      px-1
                                      mt-1' %>
<% end %>