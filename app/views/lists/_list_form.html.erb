<h1 class="mt-3 text-lg font-bold">New List</h1>
<%= form_with model: @new_list do |form| %>
  <div>
    <%= form.label :name %>
    <%= form.text_field :name, class: 'shadow
                                       appearance-none
                                       border
                                       rounded
                                       w-full
                                       py-2
                                       px-3
                                       leading-tight
                                       focus:outline-none
                                       focus:shadow-outline' %>
  </div>
  <%= form.button 'Submit', class: 'rounded-full
                                    border-2
                                    border-sky-600
                                    px-1
                                    mt-1' %>
<% end %>