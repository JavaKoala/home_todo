<h1 class="text-lg font-bold"><%= t :lists %></h1>
<ul class="divide-y divide-zinc-400">
  <% @lists.each do |list| %>
    <li class="pt-1 pb-1">
      <%= '❎' if list.id == @list&.id %>
      <%= link_to list.name, lists_path(list_id: list.id) %>
      <%= link_to t(:delete),
          list_path(id: list.id),
          data: { 'turbo-method': :delete, 'turbo-confirm': t(:are_you_sure) },
          class: 'rounded-full
                  border-2
                  border-red-500
                  px-1' if list.id == @list&.id %>
    </li>
  <% end %>
</ul>